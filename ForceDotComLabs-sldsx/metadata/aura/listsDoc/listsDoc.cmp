        <sldsx:code >
        &lt;sldsx:list direction=&quot;horizontal&quot;&gt;
            &lt;sldsx:listItem itemClass=&quot;item&quot; press=&quot;myJSHandler&quot;&gt;&lt;a&gt;Horizontal list&lt;/a&gt;&lt;/sldsx:listItem&gt;
            &lt;sldsx:listItem itemClass=&quot;item&quot; press=&quot;myJSHandler&quot;&gt;&lt;a&gt;List Item&lt;/a&gt;&lt;/sldsx:listItem&gt;
