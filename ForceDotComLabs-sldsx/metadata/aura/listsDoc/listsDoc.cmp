        <sldsx:list direction="horizontal">
            <sldsx:listItem itemClass="item" press="{!c.handlePress}"><a>Horizontal list</a></sldsx:listItem>
            <sldsx:listItem itemClass="item" press="{!c.handlePress}"><a>List Item</a></sldsx:listItem>
            <sldsx:listItem itemClass="item" press="{!c.handlePress}"><a>List item</a></sldsx:listItem>
        </sldsx:list>
        <br/>
