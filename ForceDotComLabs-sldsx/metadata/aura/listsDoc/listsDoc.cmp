            <sldsx:listItem press="{!c.handlePress}">List Item</sldsx:listItem>
        </sldsx:list>
        <sldsx:list ordered="true">
            <sldsx:listItem >Basic ordered list</sldsx:listItem>
            <sldsx:listItem >List Item</sldsx:listItem>
            <sldsx:listItem >List Item</sldsx:listItem>
        </sldsx:list>
         <sldsx:list ordered="true" type="ordered">
             <sldsx:listItem >Ordered numeric list</sldsx:listItem>
