<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Amount</field>
        <field>Description</field>
        <field>StageName</field>
        <field>Start_Date__c</field>
        <field>End_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>hope.brown@redcrosssales.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 AND 2</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Highest_Discount__c</field>
                <operation>greaterOrEqual</operation>
                <value>15.00</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Highest_Discount__c</field>
                <operation>lessOrEqual</operation>
                <value>20</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Greater Than OR Equal to 15.00% and Up to 20.0%</label>
        <name>Greater_Than_OR_Equal_to_15_00_and_Up_to_20_0</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>gigi.neffmascioli@redcross.org</name>
                <type>user</type>
            </approver>
            <approver>
                <name>hope.brown@redcrosssales.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Highest_Discount__c</field>
                <operation>greaterThan</operation>
                <value>20.00</value>
            </criteriaItems>
        </entryCriteria>
        <label>Opportunity: Highest Product Discount &gt; 20.00</label>
        <name>Opportunity_Highest_Product_Discount_20_00</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3 ) AND 4</booleanFilter>
        <criteriaItems>
            <field>Opportunity.Highest_Discount__c</field>
            <operation>greaterOrEqual</operation>
            <value>15.01</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Owner_Profile__c</field>
            <operation>equals</operation>
            <value>ARC BGST Sales User</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Owner_Profile__c</field>
            <operation>equals</operation>
            <value>ARC BGST Sales Admin</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>notEqual</operation>
            <value>AES</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Send_Pricing_Level_Approved_Notification_to_Opportunity_Owner_BGST</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_BGST_Approval_Status_To_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Set_BGST_Approval_Status_To_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_BGST_Approval_Status_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>BGST Approval Process &gt;=15.01</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
